<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
        <!--   Overlay actionbar -->
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <!-- Up indicator -->
       <!-- <item name="android:homeAsUpIndicator">@drawable/ic_up_myfab5</item>-->
        <!-- Support library compatibility -->
        <!--<item name="homeAsUpIndicator">@drawable/ic_up_myfab5</item>-->
        <!-- Default window color -->
        <!--
        <item name="android:windowBackground">@color/white</item>
        -->
        <!--
        <item name="android:windowTranslucentStatus">true</item>
        -->
    </style>

    <style name="NoCapsTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/NoCapsTextAppearance</item>
    </style>

    <style name="NoCapsTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="ExpandedAppBarWhite" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBarWhite" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
